{
  "name": "WCAG Guidelines",
  "description": "Extension to test and apply user accessibility modes.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "WCAG.png"
  },
  "action": {
    "default_title": "Open WCAG Guidelines"
  },
  "side_panel": {
    "default_path": "popup/index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
